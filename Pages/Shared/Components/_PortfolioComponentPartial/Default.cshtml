@model List<MyPortfolioWebsite.DAL.Entities.Portfolio>
<style>
    .masonry {
        display: grid;
        grid-template-columns: repeat(4, minmax(200px, 1fr)); 
        gap: 20px; 
        padding: 0 20px;
    }

    .masonry__brick {
        width:340px;
        position: relative;
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .masonry__brick:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

    .item-folio__thumb img {
        width: 100%; 
        height: 350px; 
        object-fit: cover; 
        border-radius: 8px;
        transition: transform 0.3s ease;
    }

        .item-folio__thumb img:hover {
            transform: scale(1.05);
        }


    .item-folio__project-link {
        z-index: 10;
        position: absolute;
        top: 10px; 
        left: 10px; 
        width: 40px; 
        height: 40px; 
        display: flex; 
        align-items: center; 
        justify-content: center; 
        background-color: rgba(0, 0, 0, 0.6);
        color: white;
        border-radius: 50%;
        font-size: 1.5rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .item-folio__project-link:hover {
            background-color: rgba(0, 0, 0, 0.8);
            transform: scale(1.1); 
        }


    .item-folio:hover .item-folio__caption {
        display: block;
    }

</style>
<section id="works" class="s-works target-section">
    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolio</h3>
            <h1>See My Latest Projects</h1>
            <p class="lead">Some of my software projects available on my GitHub are listed below.</p>
        </div>
    </div>

    <div class="row masonry-wrap">
        <div class="masonry">
            @foreach (var portfolio in Model)
            {
                <div class="masonry__brick">
                    <div class="item-folio">
                        <div class="item-folio__thumb">
                            <a href="@portfolio.ImageUrl" class="thumb-link" title="@portfolio.Title" data-size="1050x700">
                                <img src="@portfolio.ImageUrl"
                                     srcset="@portfolio.ImageUrl 1x, @portfolio.ImageUrl.Replace(".jpg", "@2x.jpg") 2x" alt="@portfolio.Title">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                                @portfolio.Description
                            </h3>
                            <p class="item-folio__cat">
                                @portfolio.Title
                            </p>
                        </div>

                        <a href="@portfolio.Url" class="item-folio__project-link" title="Project link" target="_blank">
                            <i class="im im-link"></i>
                        </a>

                        <div class="item-folio__caption">
                            <p>@portfolio.Description</p>
                        </div>
                    </div> 
                </div> 
            }
        </div> 
    </div> 
</section> 


<script>
    document.querySelectorAll('.item-folio__project-link').forEach(link => {
        link.addEventListener('click', function(event) {
            event.stopPropagation(); 
        });
    });
</script>

