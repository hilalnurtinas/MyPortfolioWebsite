@model List<MyPortfolioWebsite.DAL.Entities.BlogPost>

@{
    ViewData["Title"] = "BlogPostList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">BlogPosts</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Blog Post List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can make changes related to the Blog Post list from below :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Head</th>
									<th scope="col">Date</th>
									<th scope="col">Description</th>
									<th scope="col">Url</th>
									<th scope="col">UrlTitle</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.BlogPostID</td>
										<td>@item.Head</td>
										<td>@item.Date</td>
										<td>@item.Description</td>
										<td>@item.Url</td>
										<td>@item.UrlTitle</td>
										<td><a href="/BlogPost/DeleteBlogPost/@item.BlogPostID" class="btn btn-danger">Delete</a></td>
										<td><a href="/BlogPost/UpdateBlogPost/@item.BlogPostID" class="btn btn-success">Update</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/BlogPost/CreateBlogPost/" class="btn btn-primary">Add New BlogPost</a>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

