@model MyPortfolioWebsite.DAL.Entities.Message

@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<input type="hidden" name="MessageID" value="@Model.MessageID" />
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Messages</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Message Details</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							<b>Gönderen: </b> @Model.SenderName
							<br />
							<b>e-mail: </b> @Model.SenderEmail
							<br />
							<b>Tarih: </b> @Model.SendDate
							<br /> <br />
							<b>Message: </b> @Model.Detail
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

